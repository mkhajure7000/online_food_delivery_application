<h1>Forgot Your Password</h1>
<div class="w-25 container">
  <%= form_with url: password_path do |form| %>
    <%= form.label :email %><br>
    <div class="mb-3">
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div>
      <%= form.submit "Reset Password" %>
    </div>
    <%= render 'layouts/flash', message: flash%>
  </div>
<% end %>
