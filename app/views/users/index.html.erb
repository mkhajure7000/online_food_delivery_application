<% if current_user.present? %>
  <h1>Welcome user</h1>
  <%= link_to "log out", session_path(current_user.id), data: {
                    turbo_method: :delete
                  } %>
<% else %>
  <h1>
    Welcome<br>
    <%= link_to "Sign up", new_user_path, class: "btn btn-success" %><br>
    <%= link_to "login", new_session_path, class: "btn btn-success" %>
  </h1>
<%end%>
